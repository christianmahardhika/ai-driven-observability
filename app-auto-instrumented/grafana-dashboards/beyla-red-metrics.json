{
  "id": null,
  "title": "Beyla RED Metrics & Operations",
  "tags": ["beyla", "red-metrics", "observability"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Request Rate (RPS)",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(rate(http_server_request_duration_seconds_count[5m])) by (service_name)",
          "legendFormat": "{{service_name}}",
          "datasource": {"type": "prometheus", "uid": "mimir"}
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "reqps"
        }
      },
      "gridPos": {"h": 8, "w": 8, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "Error Rate (%)",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(rate(http_server_request_duration_seconds_count{http_response_status_code=~\"4..|5..\"}[5m])) / sum(rate(http_server_request_duration_seconds_count[5m])) * 100",
          "legendFormat": "Error Rate",
          "datasource": {"type": "prometheus", "uid": "mimir"}
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 5}
            ]
          },
          "unit": "percent"
        }
      },
      "gridPos": {"h": 8, "w": 8, "x": 8, "y": 0}
    },
    {
      "id": 3,
      "title": "Response Time P95 (ms)",
      "type": "stat",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_request_duration_seconds_bucket[5m])) by (le, service_name)) * 1000",
          "legendFormat": "{{service_name}}",
          "datasource": {"type": "prometheus", "uid": "mimir"}
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "ms"
        }
      },
      "gridPos": {"h": 8, "w": 8, "x": 16, "y": 0}
    },
    {
      "id": 4,
      "title": "Request Rate Over Time",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(http_server_request_duration_seconds_count[5m])) by (service_name)",
          "legendFormat": "{{service_name}}",
          "datasource": {"type": "prometheus", "uid": "mimir"}
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "reqps"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
    },
    {
      "id": 5,
      "title": "Response Time Percentiles",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_server_request_duration_seconds_bucket[5m])) by (le, service_name)) * 1000",
          "legendFormat": "{{service_name}} P50",
          "datasource": {"type": "prometheus", "uid": "mimir"}
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_request_duration_seconds_bucket[5m])) by (le, service_name)) * 1000",
          "legendFormat": "{{service_name}} P95",
          "datasource": {"type": "prometheus", "uid": "mimir"}
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "ms"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
    },
    {
      "id": 6,
      "title": "HTTP Status Codes",
      "type": "piechart",
      "targets": [
        {
          "expr": "sum(rate(http_server_request_duration_seconds_count[5m])) by (http_response_status_code)",
          "legendFormat": "{{http_response_status_code}}",
          "datasource": {"type": "prometheus", "uid": "mimir"}
        }
      ],
      "gridPos": {"h": 8, "w": 8, "x": 0, "y": 16}
    },
    {
      "id": 7,
      "title": "Top Endpoints",
      "type": "table",
      "targets": [
        {
          "expr": "topk(10, sum(rate(http_server_request_duration_seconds_count[5m])) by (http_route, service_name))",
          "legendFormat": "{{service_name}} {{http_route}}",
          "datasource": {"type": "prometheus", "uid": "mimir"}
        }
      ],
      "gridPos": {"h": 8, "w": 16, "x": 8, "y": 16}
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "5s"
}